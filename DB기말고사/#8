WITH RECURSIVE DATES (D) AS (
    SELECT '2012-04-01'
        UNION ALL
    SELECT D + INTERVAL 1 DAY
    FROM DATES
    WHERE D + INTERVAL 1 DAY <= '2012-04-30'
)

SELECT DATES.D AS 날짜, 
       COUNT(S.SCHE_DATE) AS 경기횟수 
FROM DATES LEFT JOIN KL_SCHEDULE S ON DATES.D = S.SCHE_DATE
GROUP BY DATES.D
ORDER BY 날짜
