SELECT 
  PLAYER_NAME, 
  BIRTH_DATE, 
  YEAR(NOW()) - YEAR(BIRTH_DATE) - (DATE_FORMAT(NOW(), '%m%d') < DATE_FORMAT(BIRTH_DATE, '%m%d')) AS 나이
FROM KL_PLAYER
WHERE YEAR(CURDATE()) - YEAR(BIRTH_DATE) - (DATE_FORMAT(CURDATE(), '%m%d') < DATE_FORMAT(BIRTH_DATE, '%m%d'))  >= 40
ORDER BY 나이 DESC, BIRTH_DATE
