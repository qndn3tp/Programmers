# 각 팀의 최소 키를 먼저 구하고, player 중 팀과 최소 키가 같은 사람들을 출력.
WITH TEMP AS (
    SELECT T.TEAM_ID,
           T.TEAM_NAME,
           MIN(P.HEIGHT) AS HEIGHT
    FROM KL_PLAYER P JOIN KL_TEAM T ON P.TEAM_ID = T.TEAM_ID
    GROUP BY T.TEAM_ID
)

SELECT TEMP.TEAM_NAME, P.PLAYER_NAME, P.POSITION, TEMP.HEIGHT
FROM TEMP JOIN KL_PLAYER P ON TEMP.TEAM_ID = P.TEAM_ID
WHERE P.TEAM_ID = TEMP.TEAM_ID AND P.HEIGHT = TEMP.HEIGHT
ORDER BY TEMP.HEIGHT, TEMP.TEAM_NAME, P.PLAYER_NAME
